#include "shell.h"

/**
 * prompt_user - Prints "$ " and waits for the user to enter a command.
 */
void prompt_user(void)
{
    printf("$ ");
}

/**
 * read_line - Reads a line from user input.
 */
char *read_line(void)
{
    char *line = NULL;
    size_t len = 0;

    getline(&line, &len, stdin);
    return line;
}

int main(void)
{
    char *command;

    prompt_user();
    command = read_line();
    printf("%s", command);

    return (0);
}

